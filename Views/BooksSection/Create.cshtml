@using Bookstore.DTO
@model BooksSectionDTO
@{
    ViewData["Title"] = "Create book";
}
<div>
    <h4>Add new book section</h4>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Section">Section</label>
            <input type="text" asp-for="Section" class="form-control" />
            <div>
                <input class="btn btn-success" type="submit" formmethod="post" value="Create" />
            </div>
        </div>
    </form>
</div>