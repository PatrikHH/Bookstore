@using Bookstore.DTO
@model BookInWarehouseDTO
@{
    ViewData["Title"] = "Create book";
}
<div>
    <h4>Add new book</h4>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" class="form-control" required/>
            <label asp-for="Author">Author</label>
            <input type="text" asp-for="Author" class="form-control" required/>
            <label asp-for="ISBN">ISBN</label>
            <input type="number" asp-for="ISBN" class="form-control" required />
            <label asp-for="Quantity">Quantity</label>
            <input type="number" asp-for="Quantity" class="form-control" />
            <div>
                <input class="btn btn-success" type="submit" formmethod="post" value="Create" />
            </div>
        </div>
    </form>
</div>